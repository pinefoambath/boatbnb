<div class="container">
  <h1>List your boat</h1>
  <div>
    <%= simple_form_for @boat do |f| %>
      <%= f.input :name %>
      <%= f.input :make %>
      <%= f.input :length %>
      <%= f.input :address %>
      <%= f.input :location_country, as: :string %>
      <%= f.input :daily_price %>
      <%= f.input :sleeps %>
      <%= f.input :year_built %>
      <%= f.input :boat_type %>
      <%= f.input :photo, as: :file, label: "Upload main photo" %>
      <%= f.input :photos, as: :file, input_html: { multiple: true} %>


      <%= f.button :submit, class: "btn-primary" %>
    <% end %>
    <%= link_to "I don't want to list a boat right now", root_path %>
  </div>
</div>
