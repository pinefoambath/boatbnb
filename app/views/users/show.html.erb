<div class="container">
 <h2 id="booking_title"> Your Bookings </h2>
  <div class="all_bookings">
    <% if @user.bookings.size > 0 %>
        <% @user.bookings.each do |booking| %>
          <p>You booked <b><%= booking.boat.name %></b> from <b><%= booking.start_date %></b> to <b><%= booking.end_date %></b></p>
        <% end %>
    <% else %>
        <p>You've not made any bookings yet.</p>
    <% end %>
  </div>

<h2> Your Boats </h2>
  <div class="all_bookings">
      <% if @user.boats.size > 0 %>
         <% @user.boats.each do |boat| %>
          <p>You're currently listing <%= boat.name %></p>
         <% end %>
      <% else %>
